<%- include("partials/header") -%>

<h1>Compose</h1>

<form action="/compose" method="post">
    <label for="title">Title</label>
    <input type="text" class="form-control" id="title" aria-describedby="emailHelp" name="postTitle" style="margin-bottom:20px;">
    
    <label for="post">Post</label>
    <textarea class="form-control" id="post" rows="3" name="postBody" style="margin-bottom:20px;"></textarea>
    
    <button type="submit" class="btn btn-primary">Publish</button>
</form>

<%- include("partials/footer") -%>